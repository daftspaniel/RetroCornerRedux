
10 X=0:Y=0:K=0:PI=3.1415926:C=RND(8):CX=32:CY=14:CLS 0
20 I=14:J=2
30 FOR K=-PI TO PI STEP 0.07
40 X=CX+I*SIN(K):Y=CY+13*COS(K)
