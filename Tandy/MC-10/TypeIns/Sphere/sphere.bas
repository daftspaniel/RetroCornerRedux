50 X=CX+20*SIN(K):Y=CY+(I-1)*COS(K)
55 IF X>0 AND X<64 AND Y>=0 AND Y<32 THEN SET(X,Y,C)
60 NEXT
70 I=I-J
80 J=J+1
90 IF I>0 THEN GOTO 30
100 NC=RND(8):IF NC=C THEN 100
110 C=NC:FORD=1TO300:NEXT
120 GOTO 20

