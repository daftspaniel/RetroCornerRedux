360 ?@0,STRING$(255," ");:T$=PS$:TL=3:GOSUB1640
370 PO=226
380 ?@PO+32,"sound     ";:?@PO+32+9,STR$(I)+" ";
390 ?@PO+32*2,"string                     ";:?@PO+32*2+10,S$(I)+" ";
400 ?@PO+32*3,"tempo":?@PO+32*3+9,STR$(T(I))+" ";
410 ?@PO+32*4,"repeat   ";:?@PO+32*4+9,STR$(R(I))+" ";
420 ?@PO+32*5,"octave   ";:?@PO+32*5+9,STR$(O(I))+" ";
