1050 REM PRINT
1060 CLS
1070 PRINT"PRINTING"
1080 RETURN

1090 REM ------LIBRARY LIVES HERE------

1100 REM TITLE SCREEN
1110 REM TT$ = PROGRAM NAME
1120 REM TBY$ = AUTHOR
1130 REM TD$ = DATE
1140 REM TV$ = VERSION
1150 TM=LEN(TT$):IF LEN(TBY$)>TM THEN TM=LEN(TBY$)
1160 IF LEN(TV$)>TM THEN TM=LEN(TV$)
1170 IF LEN(TD$)>TM THEN TM=LEN(TD$)
1180 BH=7:BW=TM+2:BY=3:BX=(30-BW)/2+1:BC$=CHR$(143):GOSUB1580
1190 BH=9:BW=TM+4:BY=1:BX=(32-BW)/2:BC$=TC$:GOSUB1460
1200 ?@(BY+1)*32 + ((32-LEN(TT$))/2),TT$;
1210 ?@(BY+3)*32 + ((32-LEN(TBY$))/2),TBY$;
1220 ?@(BY+5)*32 + ((32-LEN(TD$))/2),TD$;
1230 ?@(BY+7)*32 + ((32-LEN(TV$))/2),TV$;
1240 RETURN

1250 REM VERTICAL LINE
1260 REM LC$ = CHARACTER FOR LINE
1270 REM LX,LY = POSITION 
1280 REM LL = LENGTH
1290 LZ=LY+LL-1
1300 FOR BR=LY TO LZ:?@LX+(BR*32),LC$;:NEXT
1310 RETURN

1320 REM HORIZONTAL LINE
1330 REM LC$ = CHARACTER FOR LINE
1340 REM LX,LY = POSITION 
1350 REM LL = LENGTH
1360 LO$=""
1370 REM MC10: FOR BR=1TOLL:LO$=LO$+LC$:NEXT
1380 REM COCO/DRAGON: LO$=STRING$(LL,LC$)
1390 LO$=STRING$(LL,LC$)
1400 ?@LX+(LY*32),LO$;
1410 RETURN

1420 REM BOX OUTLINE
1430 REM BX,BY = BOX POSITION
1440 REM BH,BW = BOX HEIGHT & WIDTH
1450 REM BC$ = CHARACTER FOR BOX EDGE
1460 REM MC10: BR$="":FOR BR=1TOBW:BR$=BR$+BC$:NEXT
1470 REM COCO/DRAGON: BR$=STRING$(BW,BC$)
1480 BR$=STRING$(BW,BC$)
1490 ?@BX+((BY+1)*32),BR$;
1500 ?@BX+((BY+BH)*32),BR$;
1510 BH=BH-1:BY=BY+1:BW=BW-1
1520 FOR BQ=1TOBH:?@BX+((BY+BQ)*32),BC$;:?@BX+BW+((BY+BQ)*32),BC$;:NEXT
1530 RETURN

1540 REM FILLED BOX
1550 REM BX,BY = BOX POSITION
1560 REM BH,BW = BOX HEIGHT & WIDTH
1570 REM BC$ = CHARACTER FOR BOX
1580 REM MC10: BR$="":FOR BR=1TOBW:BR$=BR$+BC$:NEXT
1590 REM COCO/DRAGON: BR$=STRING$(BW,BC$)
1600 BR$=STRING$(BW,BC$)
1610 FOR BQ=1TOBH:?@BX+((BY-1+BQ)*32),BR$;:NEXT
1620 RETURN

1630 REM CENTER TEXT. TL = vertical line number.
1640 PRINT@(32-LEN(T$))/2+32*TL,T$;
1650 RETURN

1660 REM DELAY
1670 FORDZ=1TO1000:NEXT:RETURN

1680 REM WAIT FOR SPACEBAR
1690 BC$=CHR$(128):?@483,"press"+BC$+"space"+BC$+"bar"+BC$+"to"+BC$+"continue";:
1700 WA$=INKEY$:IFWA$<>" "THEN1700ELSE RETURN

1710 REM WAIT FOR ANY KEY
1720 WA$=INKEY$:IF WA$="" THEN 1720
1730 RETURN

1740 REM ANY KEY PROMPT AT BOTTOM OF SCREEN.
1750 ?@483,"PRESS ANY KEY TO CONTINUE";:GOSUB1720:RETURN

1760 REM INVERTED ANY KEY PROMPT AT BOTTOM OF SCREEN.
1770 BC$=CHR$(128):?@483,"press"+BC$+"any"+BC$+"key"+BC$+"to"+BC$+"continue";:GOSUB1720:RETURN

1780 REM LOWER CASE TEXT
1790 TL=LEN(T$):O$=""
1800 FORBR=1TOTL:C$=MID$(T$,BR,1):BH=ASC(C$):IF BH<91 AND BH>64 THEN C$=CHR$(BH+32)
1810 IFBH=32THENC$=CHR$(128)
1820 O$=O$+C$
1830 NEXT
1840 T$=O$
1850 RETURN
