610 IF A$="," THEN R(I)=R(I)-1:IFR(I)<1THENR(I)=1
620 RETURN
630 REM MP=5
640 IF A$="." THEN O(I)=O(I)+1:IFO(I)>5THENO(I)=5
650 IF A$="," THEN O(I)=O(I)-1:IFO(I)<1THENO(I)=1
660 RETURN
670 REM MP=6
680 IF A$="." THEN V(I)=V(I)+1:IFV(I)>31THENV(I)=31
690 IF A$="," THEN V(I)=V(I)-1:IFV(I)<1THENV(I)=1
700 IF A$=">" THEN V(I)=V(I)+10:IFV(I)>31THENV(I)=31
