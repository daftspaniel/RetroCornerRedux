250 IFA$<>"A" AND A$<>"Q" THEN 290
260 IFA$="Q"THENOP=MP:MP=MP-1:IFMP<1THENMP=1
270 IFA$="A"THENOP=MP:MP=MP+1:IFMP>6THENMP=6
