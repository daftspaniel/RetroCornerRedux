10 DIM G(32,16),X,Y,A$:TIMER=0
20 REM POKE 65495,0
30 FORY=1TO16
40 FORX=1TO32
50 G(X,Y)=RND(9)
60 POKE&H400+((Y-1)*&H20)+(X-1),&H30+G(X,Y)
70 NEXT
80 NEXT
90 REM ?TIMER/60
100 REM
110 X=15:Y=8:
120 ?@((Y-1)*&H20)+(X-1),"*";
130 A$=INKEY$:IFA$=""THEN130
140 IFA$="O" AND X>1 THEN GOSUB190
150 IFA$="P" AND X<32 THEN GOSUB250
155 IFA$="Q" AND Y>1 THEN GOSUB350
156 IFA$="A" AND Y<16 THEN GOSUB450
160 IFA$="R" THEN 110
170 GOTO 120
180 GOTO 180
190 REM *** MOVE LEFT ***
200 D=G(X-1,Y)
210 IF D=0 OR D=>X THEN SOUND100,1:RETURN
220 FOR J=X TO X-D STEP-1:G(J,Y)=0:POKE&H400+((Y-1)*&H20)+(J-1),128:NEXT
230 X=X-D
240 RETURN
250 REM *** MOVE LEFT ***
260 D=G(X+1,Y)
270 IF D=0 OR D+X>32 THEN SOUND100,1:RETURN
280 FOR J=X TO X+D:G(J,Y)=0:POKE&H400+((Y-1)*&H20)+(J-1),128:NEXT
290 X=X+D
300 RETURN
350 REM *** MOVE UP ***
360 D=G(X,Y-1)
370 IF D=0 OR Y-D<1 THEN SOUND100,1:RETURN
380 FOR J=Y TO Y-D STEP-1:G(X,J)=0:POKE&H400+((J-1)*&H20)+(X-1),128:NEXT
390 Y=Y-D
400 RETURN
450 REM *** MOVE DOWN ***
460 D=G(X,Y+1)
470 IF D=0 OR Y+D>26 THEN SOUND100,1:RETURN
480 FOR J=Y TO Y+D:G(X,J)=0:POKE&H400+((J-1)*&H20)+(X-1),128:NEXT
490 Y=Y+D
500 RETURN



